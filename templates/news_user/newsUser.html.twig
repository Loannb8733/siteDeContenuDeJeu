{% extends 'front-layout.html.twig' %}

{% block body %}
    <h1> {{title}} </h1>

    <section class="articles">
        {% for article in news %}
            <article>
                <h2> {{ article.title }} </h2>
                <div class="metadata">
                    Publié le {{ article.createdAt | date('d/m/y') }} à
                    {{ article.createdAt | date('H:i') }}
                    dans la catégorie {{ article.category.title }} </div>
                <div class="content">
                    <img src="{{ article.image}}" alt="">

                    <br><br>

                    <a href="{{ path('news_user_show', {'id': article.id}) }}"
                       class="btn btn-outline-info">Voir plus
                    </a>
                </div>

                <br><br><br>

            </article>
        {% endfor %}
    </section>
{% endblock %}
